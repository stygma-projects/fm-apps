model Order {
  id               String           @id @default(uuid())
  products         Product[]
  type             OrderType
  status           OrderStatus      @default(IN_DRAFT)
  withdrawalMethod WithdrawalMethod
  terminalId       Int?
  price            Float
  createdAt        DateTime         @default(now())
}

enum OrderType {
  DELIVERY
  PICKUP
  TERMINALS
}

enum OrderStatus {
  IN_DRAFT
  WAITING_FOR_PAYMENT
  IN_PROGRESS
  DELIVERED
  CANCELED
}

enum WithdrawalMethod {
  CASH
  CARD
}
