// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
  output          = "./generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id                String                @id @default(uuid())
  label             String                @unique
  price             Float
  imageUrl          String?
  available         Boolean               @default(true)
  productCategoryId String
  productCategory   ProductCategory       @relation(fields: [productCategoryId], references: [id])
  ingredients       IngredientInProduct[]
}

model ProductCategory {
  id       String    @id @default(uuid())
  label    String    @unique
  imageUrl String?
  products Product[]
}

model Ingredient {
  id                  String                @id @default(uuid())
  label               String                @unique
  price               Float
  imageUrl            String?
  IngredientType      IngredientType        @relation(fields: [ingredientTypeId], references: [id])
  ingredientTypeId    String
  IngredientInProduct IngredientInProduct[]
}

model IngredientType {
  id          String       @id @default(uuid())
  label       String       @unique
  imageUrl    String?
  ingredients Ingredient[]
}

model IngredientInProduct {
  id           String                @id @default(uuid())
  ingredientId String
  productId    String
  ingredient   Ingredient            @relation(fields: [ingredientId], references: [id])
  product      Product               @relation(fields: [productId], references: [id])
  composition  IngredientComposition @default(BASE)
  mandatory    Boolean               @default(false)
}

enum IngredientComposition {
  BASE
  EXTRA
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  firstName String
  lastName  String
  password  String
  role      UserRole @default(USER)
}

enum UserRole {
  ADMIN
  USER
}
