{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^db:generate", "^build"]
    },
    "preview": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^db:generate", "^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^db:generate", "^build"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "db:reset": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test:e2e:ci": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {},
    "lint:fix": {},
    "type-check": {
      "dependsOn": ["db:generate", "^db:generate", "^build"]
    },
    "clean": {
      "cache": false
    }
  },
  "globalEnv": ["DATABASE_URL", "BETTER_AUTH_SECRET", "BETTER_AUTH_URL", "DEBUG", "GOOGLE_CLIENT_ID", "GOOGLE_CLIENT_SECRET"]
}
